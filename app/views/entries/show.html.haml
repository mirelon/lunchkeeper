- model_class = Entry
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:count) + ':'
  %br
  = @entry.count
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @entry.code
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @entry.description
%p
  %strong= model_class.human_attribute_name(:preselected) + ':'
  %br
  = @entry.preselected

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_path(@entry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_path(@entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
