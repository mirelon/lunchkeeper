= form_for @entry, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :count, :class => 'control-label'
    .controls
      = f.number_field :count, :class => 'number_field'
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.text_field :code, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :preselected, :class => 'control-label'
    .controls
      = f.check_box :preselected, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), entries_path, :class => 'btn'
