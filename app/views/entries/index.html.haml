- model_class = Entry
.page-header
  %h1.title= @keeper.name
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:count)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:preselected)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @entries.each do |entry|
      %tr
        %td= link_to entry.id, keeper_entry_path(@keeper, entry)
        %td= entry.count
        %td= entry.code
        %td= entry.description
        %td= entry.preselected
        %td=l entry.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_keeper_entry_path(@keeper, entry), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), keeper_entry_path(@keeper, entry), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_keeper_entry_path, :class => 'btn btn-primary'
