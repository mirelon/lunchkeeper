= form_for @keeper, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    - if @keeper.id.present?
      = link_to t('.entries', :default => t("helpers.links.entries")), keeper_entries_path(@keeper), :class => 'btn btn-info'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), keepers_path, :class => 'btn'
